{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Project‑References */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    /* 输出目录 */
    "rootDir": "./src",
    "outDir": "./lib",
    /* Lib & 类型 */
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}